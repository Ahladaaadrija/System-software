#include <stdio.h>
#include <stdlib.h>

void cscan(int requests[], int n, int head, int size, int direction) {
    int seek = 0, i,index;
    
    for (i = 0; i < n - 1; i++)
        for (int j = 0; j < n - i - 1; j++)
            if (requests[j] > requests[j + 1]) {
                int temp = requests[j];
                requests[j] = requests[j + 1];
                requests[j + 1] = temp;
            }

    
    for (i = 0; i < n; i++)
        if (head < requests[i])
            break;
        index=ifor ;

    printf("\nHead movement order:\n%d", head);

    if (direction == 1) {
        for (int i=index; i < n; i++) {
            seek += abs(requests[i] - head);
            head = requests[i];
            printf(" -> %d", head);
        }
        seek += abs((size - 1) - head) + abs((size - 1) - 0);
        head = 0;
        printf(" -> %d", size - 1);
        printf(" -> %d", head);
        for (int i = 0; i < index; i++) {
            seek += abs(requests[i] - head);
            head = requests[i];
            printf(" -> %d", head);
        }
    }

    else {
  
        for (int i = index - 1; i >= 0; i--) {
            seek += abs(requests[i] - head);
            head = requests[i];
            printf(" -> %d", head);
        }
        seek += abs(head - 0) + abs((size - 1) - 0);
        head = size - 1;
        printf(" -> 0 -> %d", head);
        for (int i = n - 1; i >= index; i--) {
            seek += abs(requests[i] - head);
            head = requests[i];
            printf(" -> %d", head);
        }
    }

    printf("\nTotal Seek Time = %d", seek);
    printf("\nAverage Seek Time = %.2f\n", (float)seek /(n+1));
}

int main() {
    int n, size, head, direction;
    int requests[100];

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request queue: ");
    for (int i = 0; i < n; i++) scanf("%d", &requests[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    printf("Enter direction (1 = right, 0 = left): ");
    scanf("%d", &direction);

    cscan(requests, n, head, size, direction);
    return 0;
}
